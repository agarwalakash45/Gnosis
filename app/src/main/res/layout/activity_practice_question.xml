<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ayondas2k14.gnosis.PracticeQuestionActivity">
    <TextView
        android:layout_width="137dp"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Quiz Type"
        android:id="@+id/quizTypeTextView"
        android:textSize="20dp"
        android:textStyle="bold" />


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout"
        android:weightSum="1"
        android:layout_below="@+id/quizTypeTextView">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Question"
            android:id="@+id/queTextView"
            android:layout_marginTop="10dp" />

        <Button
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Option A"
            android:id="@+id/option1Button"
            android:layout_gravity="center_horizontal"
            android:onClick="onOption1Clicked" />

        <Button
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Option B"
            android:id="@+id/option2Button"
            android:layout_gravity="center_horizontal"
            android:onClick="onOption2Clicked"
            android:layout_marginTop="5dp" />

        <Button
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Option C"
            android:id="@+id/option3Button"
            android:layout_gravity="center_horizontal"
            android:onClick="onOption3Clicked"
            android:layout_marginTop="5dp" />

        <Button
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Option D"
            android:id="@+id/option4Button"
            android:layout_gravity="center_horizontal"
            android:onClick="onOption4Clicked"
            android:layout_marginTop="5dp" />

    </LinearLayout>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="40dp"
        android:layout_height="35dp"
        android:id="@+id/backButton"
        android:background="@drawable/left_arrow"
        android:layout_marginRight="45dp"
        android:onClick="onBackButtonClicked"
        android:layout_below="@+id/linearLayout"
        android:layout_alignRight="@+id/quizTypeTextView"
        android:layout_alignEnd="@+id/quizTypeTextView"
        android:layout_marginEnd="45dp"
        android:layout_marginTop="10dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/homeButton"
        android:background="@drawable/home"
        android:onClick="onHomeButtonClicked"
        android:layout_alignBottom="@+id/backButton"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="40dp"
        android:layout_height="35dp"
        android:id="@+id/nextButton"
        android:background="@drawable/right_arrow"
        android:onClick="onNextButtonClicked"
        android:layout_below="@+id/linearLayout"
        android:layout_alignRight="@+id/linearLayout"
        android:layout_alignEnd="@+id/linearLayout"
        android:layout_marginRight="51dp"
        android:layout_marginEnd="51dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/qnoTv"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/quizTypeTextView"
        android:layout_toEndOf="@+id/quizTypeTextView"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textColor="#0a0909" />

</RelativeLayout>
