<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ayondas2k14.gnosis">

    <uses-feature
        android:name="android.hardware.Camera"
        android:required="true" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".PracticeActivity" />
        <activity android:name=".PracticeQuestionActivity" />
        <activity android:name=".PracticeStatsActivity" />
        <activity android:name=".ChallengeStatsActivity"

            />
        <activity
            android:name=".ChallengeActivity"
            android:label="@string/title_activity_challenge"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ChallengeQuestionActivity"></activity>
    </application>

</manifest>
